
<div class="container mt-4">
  <h2>Detalles de la Reserva</h2>

  <div class="card">
    <div class="card-body">
      <h5 class="card-title">Reserva #<%= @booking.id %></h5>

      <p class="card-text">
        <strong>Fecha de Inicio:</strong> <%= @booking.start_date %>
      </p>

      <p class="card-text">
        <strong>Fecha de Fin:</strong> <%= @booking.finish_date %>
      </p>

      <p class="card-text">
        <strong>Auto:</strong> <%= @booking.car.brand %> <%= @booking.car.model %>
      </p>

      <div class="mt-3">
        <%= link_to "Modificar",
            edit_car_booking_path(@booking.car, @booking),
            class: "btn btn-primary" %>

        <%= link_to "Volver al Auto",
            car_path(@booking.car),
            class: "btn btn-secondary" %>

        <%= link_to "Eliminar",
            booking_path(@booking),
            data: { turbo_method: :delete, turbo_confirm: "¿Estás seguro?" },
            class: "btn btn-danger" %>
      </div>
    </div>
  </div>
</div>
