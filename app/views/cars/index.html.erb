<div class="content-with-navbar-spacing">
  <div class="container">
    <div class="row">
      <% @cars.each do |car| %>
        <div class="col-md-4 mb-4">
          <div class="card" style="background-color: #f8f9fa;">
            <% if car.image.attached? %>
              <%= image_tag url_for(car.image), alt: car.model, class: "card-img-top" %>
            <% else %>
              <img src="placeholder.jpg" class="card-img-top" alt="No photo available">
            <% end %>
            <div class="card-body">
              <h5 class="card-title"><%= car.model %></h5>
              <p class="card-text">Marca: <%= car.brand %></p>
              <p class="card-text">Capacidad: <%= car.capacity %> asientos</p>
              <p class="card-text">Color: <%= car.color %></p>
              <div class="d-flex justify-content-between align-items-center">
                <p class="text-muted"><strong>Precio:</strong> $<%= car.price %>/día</p>
                <%= link_to "Rentar", new_car_booking_path(car), class: "btn btn-outline-primary btn-sm" %>
              </div>
              <div class="mt-2">
                <%= link_to "Ver más", car_path(car), class: "btn btn-secondary btn-sm" %>
              </div>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>
