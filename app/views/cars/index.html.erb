<div class="container">
  <div class="row">
    <%@cars.each do |c|%>
      <div class="card m-3" style="width: 18rem;">
        <img src="..." class="card-img-top" alt="...">
        <div class="card-body">
          <h5 class="card-title"><%=c.model%></h5>
          <p class="card-text"><%=c.brand%></p>
          <p class="card-text"><%=c.capacity%></p>
          <p class="card-text"><%=c.price%></p>
          <p class="card-text"><%=c.year%></p>
          <p class="card-text"><%=c.color%></p>
          <a href="#" class="btn btn-primary">Go somewhere</a>
        </div>
      </div>
    <%end%>
  </div>
</div>
