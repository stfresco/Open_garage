<p>Hello</p>
<div class = "center">
  <div class="card" style="width: 18rem;">
  <div class="card-body">
    <h1><%= @car.model %> - <%= @car.year %></h1>
  </div>
   <ul class="list-group list-group-flush">
      <% if @car.image.attached? %>
        <%= image_tag url_for(@car.image), alt: @car.model %>
      <% else %>
        <p>No photo</p>
      <% end %>
      <li class="list-group-item"><strong>Price: </strong><%= @car.price %></li>
      <li class="list-group-item"> <strong>Capacity: </strong> <%= @car.capacity %></li>
       <li class="list-group-item"> <strong>Color: </strong> <%= @car.color%></li>
   </ul>
  <div class="card-body">
    <%= link_to "edit", edit_car_path(@car)%>
    <%= link_to "Delete", car_path(@car), data: {turbo_method: :delete, turbo_confirm: "Are you sure?"}%>
  </div>
  </div>
</div>
